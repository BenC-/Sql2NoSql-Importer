<dataConfig>

    <dataSource driver="com.mysql.jdbc.Driver" url="jdbc:mysql://localhost/xms-2124" user="root" password="mysql" batch-size="-1"/>
   
    <document>
       <entity  name="sms_mt" pk="id_sms" query="SELECT id_sms,message,etat,cause,date_depose,date_emission,id_canal,id_la,id_country,id_operator FROM arch_20130729_sms_mt">
		  <field column="id_sms" name="id_sms" type="INTEGER"/>
		  <field column="message" name="message" type="BINARY"/>
		  <field column="etat" name="etat" type="STRING"/>    
		  <field column="cause" name="cause" type="INTEGER"/>
		  <field column="date_depose" name="date_depot" type="TIMESTAMPASLONG"/>    
		  <field column="date_emission" name="date_emission" type="TIMESTAMPASINT"/>    
		  <field column="date_depose" name="date_depot_string" type="TIMESTAMPASLONGTOHUMANFORMAT"/>    
		  <field column="date_emission" name="date_emission_string" type="TIMESTAMPASINTTOHUMANFORMAT"/>    
		  <field column="id_canal" name="id_canal" type="INTEGER"/>
		  <field column="id_la" name="id_la" type="INTEGER"/>
		  <field column="id_country" name="id_pays" type="INTEGER"/>    
		  <field column="id_operator" name="id_operateur" type="INTEGER"/>		  
		  
		  <entity name="large_account" query="select name, sn, id_gateway from large_accounts where id_la='${sms_mt.id_la}'">
                <field column="name" name="name" type="STRING"/>
                <field column="sn" name="sn" type="INTEGER"/>
                <field column="id_gateway" name="id_gateway" type="INTEGER"/>      
                          
                <entity name="gateway" query="select name from Gateway where id_gateway='${large_account.id_gateway}'">
                	<field column="name" name="name" type="STRING"/>
                </entity>         
                       
          </entity>		  
       </entity>      
       
    </document>	
</dataConfig>
